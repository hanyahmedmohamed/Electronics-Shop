
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}


    @*<div class="left_content">*@
        <div class="title"><span class="title_icon"><img src="~/Content/User/images/bullet1.gif" alt="" /></span>Featured products</div>

@foreach(var product in ViewBag.featuredProducts)
{ 
        <div class="feat_prod_box">
            <div class="prod_img"><a href="@Url.Action("Details", "Product", new { id = product.id })"><img src="~/Content/User/images/@product.photo" alt="" border="0" /></a></div>
            <div class="prod_det_box">
                <div class="box_top"></div>
                <div class="box_center">
                    <div class="prod_title">@product.name</div>
                    <p class="details">@product.description</p>
                    <a href="@Url.Action("Details", "Product", new { id = product.id })" class="more">- more details -</a>
                    <div class="clear"></div>
                </div>
                <div class="box_bottom"></div>
            </div>
            <div class="clear"></div>
        </div>
     
}
    
        <div class="title"><span class="title_icon"><img src="~/Content/User/images/bullet2.gif" alt="" /></span>New products</div>
        <div class="new_products">

            @foreach (var product in ViewBag.latestProducts) { 
            <div class="new_prod_box">
                <a href="@Url.Action("Details", "Product", new { id = product.id })">@product.name</a>
                <div class="new_prod_bg"> <span class="new_icon"><img src="~/Content/User/images/new_icon.gif" alt="" /></span> <a href="@Url.Action("Details", "Product", new { id = product.id })"><img src="~/Content/User/images/@product.photo" alt="" class="thumb" border="0" /></a> </div>
            </div>
            
            }
        </div>
        <div class="clear"></div>
    

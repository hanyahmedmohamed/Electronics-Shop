
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
@section head {
    <link rel="stylesheet" href="~/Content/User/lightbox.css" type="text/css" media="screen" />
<script src="~/Content/User/js/prototype.js" type="text/javascript"></script>
<script src="~/Content/User/js/scriptaculous.js?load=effects" type="text/javascript"></script>
<script src="~/Content/User/js/lightbox.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Content/User/js/java.js"></script>

    }

<div class="crumb_nav"> <a href="@Url.Action("Index", "Home")">home</a> &gt;&gt;  @ViewBag.product.name</div>
<div class="title"><span class="title_icon"><img src="~/Content/User/images/bullet1.gif" alt=""></span>@ViewBag.product.name</div>
<div class="feat_prod_box_details">
    <div class="prod_img">
        <a href="#"><img src="~/Content/User/images/@ViewBag.product.photo" alt="" border="0"></a> <br>
        <br>
        <a href="~/Content/User/images/big_pic.jpg" rel="lightbox"><img src="~/Content/User/images/zoom.gif" alt="" border="0"></a>
    </div>
    <div class="prod_det_box">
        <div class="box_top"></div>
        <div class="box_center">
            <div class="prod_title">Details</div>
            <p class="details">
                @*Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.<br>
                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.*@
                @ViewBag.product.description
            </p>
            <div class="price"><strong>PRICE:</strong> <span class="red">@ViewBag.product.price $</span></div>
            <div class="price"><strong>COLORS:</strong> <span class="colors"><img src="~/Content/User/images/color1.gif" alt="" border="0"></span> <span class="colors"><img src="~/Content/User/images/color2.gif" alt="" border="0"></span> <span class="colors"><img src="~/Content/User/images/color3.gif" alt="" border="0"></span> </div>
            <a href="@Url.Action("Buy", "Cart", new { id = ViewBag.product.id })" class="more"><img src="~/Content/User/images/order_now.gif" alt="" border="0"></a>
            <div class="clear"></div>
        </div>
        <div class="box_bottom"></div>
    </div>
    <div class="clear"></div>
</div>
<div id="demo" class="demolayout">
    <ul id="demo-nav" class="demolayout">
        <li><a class="active" href="#tab1">More details</a></li>
        <li><a class="" href="#tab2">Related Products</a></li>
    </ul>
    <div class="tabs-container">
        <div style="display: block;" class="tab" id="tab1">
            <p class="more_details">
                @ViewBag.product.description
            </p>

        </div>
        <div style="display: none;" class="tab" id="tab2">

            @foreach (var product in ViewBag.relatedProducts)
            { 
            <div class="new_prod_box">
                <a href="@Url.Action("Details", "Product", new { id = product.id })">@product.name</a>
                <div class="new_prod_bg"> <a href="@Url.Action("Details", "Product", new { id = product.id })"><img src="~/Content/User/images/@product.photo" alt="" class="thumb" border="0"></a> </div>
            </div>
            }
            

            <div class="clear"></div>
        </div>
    </div>
</div>
<div class="clear"></div>

<script type="text/javascript">

    var tabber1 = new Yetii({
        id: 'demo'
    });

</script>

